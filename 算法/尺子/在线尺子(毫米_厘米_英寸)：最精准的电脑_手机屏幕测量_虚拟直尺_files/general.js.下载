}

function ConvertMenu2Mobile(id){
if (screen.width<500){
var t=document.getElementById(id);
var links=t.getElementsByTagName('a');
var s='';
for(i=0;i<links.length;i++){
  s+='<li><a href="'+links[i].href+'" target="_blank">'+links[i].innerHTML+'</a></li>';
}
t.outerHTML='<ul>'+s+'</ul>';
}}

